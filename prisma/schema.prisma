generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model income {
  id String @id @default(uuid())
  category String
  desc String
  amount Decimal
}

model expense {
  id String @id @default(uuid())
  category String
  desc String
  amount Decimal
}

model asset {
  id String @id @default(uuid())
  category String
  desc String
  amount Decimal
}

model liability {
  id String @id @default(uuid())
  category String
  desc String
  amount Decimal
}

model category {
  id String @id @default(uuid())
  category String
  assignedTo String
}