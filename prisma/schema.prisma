generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model category {
  id String @id @default(uuid())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model income {
  id String @id @default(uuid())
  category String
  type String
  name String
  amount Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model expense {
  id String @id @default(uuid())
  category String
  name String
  amount Decimal
}

model asset {
  id String @id @default(uuid())
  category String
  name String
  amount Decimal
}

model liability {
  id String @id @default(uuid())
  category String
  name String
  amount Decimal
}